# Required path to your NovaAdapt checkout
NOVAADAPT_REPO_ROOT=/Users/your-user/path/to/NovaAdapt

# Optional explicit Python executable
# NOVAADAPT_GATEWAY_PYTHON=/Users/your-user/path/to/NovaAdapt/.venv/bin/python

# Kernel/model config
NOVAADAPT_MODEL_CONFIG=/Users/your-user/path/to/NovaAdapt/config/models.local.json

# Gateway storage paths
NOVAADAPT_GATEWAY_DB=/Users/your-user/Library/Application Support/NovaAdapt/data/gateway.db
NOVAADAPT_CORE_DB=/Users/your-user/Library/Application Support/NovaAdapt/data/actions.db
NOVAADAPT_CORE_PLANS_DB=/Users/your-user/Library/Application Support/NovaAdapt/data/plans.db
NOVAADAPT_CORE_AUDIT_DB=/Users/your-user/Library/Application Support/NovaAdapt/data/events.db

# Queue behavior
NOVAADAPT_GATEWAY_POLL_INTERVAL_SECONDS=0.25
NOVAADAPT_GATEWAY_RETRY_DELAY_SECONDS=10
NOVAADAPT_GATEWAY_MAX_ATTEMPTS=3

# Routing defaults
NOVAADAPT_GATEWAY_DEFAULT_WORKSPACE=default
NOVAADAPT_GATEWAY_DEFAULT_PROFILE=unleashed_local

# Optional route maps (JSON objects)
# NOVAADAPT_GATEWAY_CHANNEL_WORKSPACE_MAP={"discord":"game","slack":"ops"}
# NOVAADAPT_GATEWAY_CHANNEL_PROFILE_MAP={"discord":"developer","slack":"enterprise"}

# Optional
# NOVAADAPT_GATEWAY_EXTRA_ARGS=--channel-workspace-map '{"webchat":"default"}'
