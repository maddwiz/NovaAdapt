# Required path to your NovaAdapt checkout
NOVAADAPT_REPO_ROOT=/Users/your-user/path/to/NovaAdapt

# Optional explicit Python executable
# NOVAADAPT_CORE_PYTHON=/Users/your-user/path/to/NovaAdapt/.venv/bin/python

# Core bind/config
NOVAADAPT_MODEL_CONFIG=/Users/your-user/path/to/NovaAdapt/config/models.local.json
NOVAADAPT_CORE_HOST=127.0.0.1
NOVAADAPT_CORE_PORT=8787

# Core auth (required for production)
NOVAADAPT_CORE_TOKEN=replace-with-strong-random-token

# Core data paths
NOVAADAPT_CORE_JOBS_DB=/Users/your-user/Library/Application Support/NovaAdapt/data/jobs.db
NOVAADAPT_CORE_PLANS_DB=/Users/your-user/Library/Application Support/NovaAdapt/data/plans.db
NOVAADAPT_CORE_IDEMPOTENCY_DB=/Users/your-user/Library/Application Support/NovaAdapt/data/idempotency.db
NOVAADAPT_CORE_AUDIT_DB=/Users/your-user/Library/Application Support/NovaAdapt/data/events.db

# Limits and logging
NOVAADAPT_CORE_RATE_LIMIT_RPS=20
NOVAADAPT_CORE_RATE_LIMIT_BURST=20
NOVAADAPT_CORE_MAX_BODY_BYTES=1048576
NOVAADAPT_CORE_LOG_REQUESTS=1

# Optional
# NOVAADAPT_CORE_EXTRA_ARGS=--db-path /Users/your-user/Library/Application\ Support/NovaAdapt/data/actions.db
