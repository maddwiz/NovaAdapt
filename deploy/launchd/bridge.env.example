# Required path to your NovaAdapt checkout
NOVAADAPT_REPO_ROOT=/Users/your-user/path/to/NovaAdapt

# Optional explicit bridge binary
# NOVAADAPT_BRIDGE_BIN=/Users/your-user/path/to/NovaAdapt/bridge/bin/novaadapt-bridge

# Bridge bind/upstream
NOVAADAPT_BRIDGE_HOST=0.0.0.0
NOVAADAPT_BRIDGE_PORT=9797
NOVAADAPT_CORE_URL=http://127.0.0.1:8787
NOVAADAPT_CORE_TOKEN=replace-with-core-token

# Bridge auth (required)
NOVAADAPT_BRIDGE_TOKEN=replace-with-strong-random-token
NOVAADAPT_BRIDGE_SESSION_SIGNING_KEY=replace-with-separate-hmac-key
NOVAADAPT_BRIDGE_SESSION_TTL_SECONDS=900

# Optional restrictions
# NOVAADAPT_BRIDGE_ALLOWED_DEVICE_IDS=iphone-1,xreal-1
# NOVAADAPT_BRIDGE_CORS_ALLOWED_ORIGINS=https://console.example.com

# Bridge runtime
NOVAADAPT_BRIDGE_RATE_LIMIT_RPS=20
NOVAADAPT_BRIDGE_RATE_LIMIT_BURST=20
NOVAADAPT_BRIDGE_MAX_WS_CONNECTIONS=100
NOVAADAPT_BRIDGE_TIMEOUT=30
NOVAADAPT_BRIDGE_LOG_REQUESTS=1
NOVAADAPT_BRIDGE_REVOCATION_STORE_PATH=/Users/your-user/Library/Application Support/NovaAdapt/data/revoked_sessions.json
