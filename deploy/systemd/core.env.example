# Core bind/config
NOVAADAPT_MODEL_CONFIG=/etc/novaadapt/models.local.json
NOVAADAPT_CORE_HOST=127.0.0.1
NOVAADAPT_CORE_PORT=8787

# Core auth (required for production)
NOVAADAPT_CORE_TOKEN=replace-with-strong-random-token

# Core data paths
NOVAADAPT_CORE_JOBS_DB=/var/lib/novaadapt/jobs.db
NOVAADAPT_CORE_PLANS_DB=/var/lib/novaadapt/plans.db
NOVAADAPT_CORE_IDEMPOTENCY_DB=/var/lib/novaadapt/idempotency.db
NOVAADAPT_CORE_AUDIT_DB=/var/lib/novaadapt/events.db

# Limits and logging
NOVAADAPT_CORE_RATE_LIMIT_RPS=20
NOVAADAPT_CORE_RATE_LIMIT_BURST=20
NOVAADAPT_CORE_MAX_BODY_BYTES=1048576
NOVAADAPT_CORE_LOG_REQUESTS=1
NOVAADAPT_IDEMPOTENCY_RETENTION_SECONDS=604800
NOVAADAPT_IDEMPOTENCY_CLEANUP_INTERVAL_SECONDS=60
NOVAADAPT_AUDIT_RETENTION_SECONDS=2592000
NOVAADAPT_AUDIT_CLEANUP_INTERVAL_SECONDS=60
NOVAADAPT_OTEL_ENABLED=0
# NOVAADAPT_OTEL_EXPORTER_ENDPOINT=http://127.0.0.1:4318/v1/traces
# NOVAADAPT_OTEL_SERVICE_NAME=novaadapt-core
# Optional: trusted proxy CIDRs/IPs for X-Forwarded-For handling
# NOVAADAPT_TRUSTED_PROXY_CIDRS=10.0.0.0/8,127.0.0.1/32

# Optional
# NOVAADAPT_CORE_EXTRA_ARGS=--db-path /var/lib/novaadapt/actions.db

# Optional: route core action execution to runtime service
# DIRECTSHELL_TRANSPORT=http
# DIRECTSHELL_HTTP_URL=http://127.0.0.1:8765/execute
# DIRECTSHELL_HTTP_TOKEN=replace-with-runtime-http-token
# or daemon mode:
# DIRECTSHELL_TRANSPORT=daemon
# DIRECTSHELL_DAEMON_SOCKET=/run/novaadapt/directshell.sock
# DIRECTSHELL_DAEMON_TOKEN=replace-with-runtime-daemon-token
