# Runtime mode: native-http|http|native-daemon|daemon
NOVAADAPT_RUNTIME_MODE=native-http
NOVAADAPT_RUNTIME_PYTHON=/opt/novaadapt/.venv/bin/python
NOVAADAPT_RUNTIME_TIMEOUT_SECONDS=30

# Native HTTP runtime (used when mode=*_http)
NOVAADAPT_RUNTIME_HTTP_HOST=127.0.0.1
NOVAADAPT_RUNTIME_HTTP_PORT=8765
# Optional shared token expected by runtime HTTP endpoint
# NOVAADAPT_RUNTIME_HTTP_TOKEN=replace-with-strong-random-token
NOVAADAPT_RUNTIME_MAX_BODY_BYTES=1048576

# Native daemon runtime (used when mode=*_daemon)
NOVAADAPT_RUNTIME_DAEMON_SOCKET=/run/novaadapt/directshell.sock
NOVAADAPT_RUNTIME_DAEMON_HOST=127.0.0.1
NOVAADAPT_RUNTIME_DAEMON_PORT=8766
# Optional shared token expected by runtime daemon endpoint
# NOVAADAPT_RUNTIME_DAEMON_TOKEN=replace-with-strong-random-token

# Optional
# NOVAADAPT_RUNTIME_EXTRA_ARGS=--timeout-seconds 45
