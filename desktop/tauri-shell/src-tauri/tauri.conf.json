{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NovaAdapt Desktop",
  "version": "0.1.0",
  "identifier": "com.novaadapt.desktop",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "title": "NovaAdapt Desktop",
        "width": 1280,
        "height": 860,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ],
    "category": "DeveloperTool",
    "shortDescription": "NovaAdapt desktop operator control plane",
    "longDescription": "NovaAdapt Desktop provides production control of NovaAdapt runs, plan approvals, job operations, and live audit visibility."
  }
}
